# Oracle
ORACLE_USER=demo_user
ORACLE_PASSWORD=demo_pass
ORACLE_DSN=localhost:1521/XEPDB1
# ORACLE_HOST=...
# ORACLE_SERVICE=...
# ORACLE_PORT=1521

# Oracle schema/table selection (optional)
SCHEMA_OWNER=MY_OWNER
ORACLE_TABLE=MEMBER_MASTER

# DWH (SQL Server)
DWH_DRIVER=ODBC Driver 17 for SQL Server
DWH_SERVER=your-dwh-host
DWH_DATABASE=your-dwh-db
DWH_USERNAME=your-user
DWH_PASSWORD=your-pass
DWH_TRUSTED_CONNECTION=no

# DWH schema extraction filters (use to limit what gets extracted)
DWH_SCHEMA=
DWH_TABLES=
DWH_TABLE_PREFIX=
DWH_MAX_TABLES=20

# Okta / registration table info (owner optional)
OKTA_OWNER=MY_OWNER
OKTA_TABLE=OKTA_USERS
OKTA_REGISTERED_FLAG_COL=REGISTERED_FLAG
OKTA_REGISTERED_FLAG_VALUE=Y

# LLM
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=sk-...
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=1024

# Paths
CONFIG_PATH=config.json
RULES_PATH=rules.json
ORACLE_SCHEMA_PATH=schema/oracle_schema.json
DWH_SCHEMA_PATH=schema/dwh_schema.json
OUTPUT_ORACLE=output/oracle
OUTPUT_DWH=output/dwh
HISTORY_PATH=history/query_history.json

# Adaptive-batching defaults
DESIRED_COUNT=20
BATCH_SIZE=200
MAX_BATCHES=10
EMAIL_PATTERN=%@keyword.com%
ORDER_BY_COLUMN=NVL(LAST_UPDATED, CREATED_DATE) DESC
